pragma solidity 0.6.1;

contract Add_data{

   
      string data=""; 
      address owner;  
      
      constructor() public {
            owner=msg.sender; 
     }

       modifier onlyOwner(){ /* only owner can call it */
            require(owner==msg.sender);
            _;
     }

      function get_data()public view returns(string memory){
              return data;
      }
       function add_data(string memory new_data) public onlyOwner { /* only owner can call it */
          data=new_data;
     }
}
